#!/bin/bash

source /lib/sapphrc/sapphrc-functions
source /lib/sapphrc/sapphrc-font
validate_backupdir

cd "$HOME/.config/sapphrc/backups"
sapphrc_backup
gs="$(git status | grep -i 'modified')"
git fetch origin
reslog=$(git log HEAD..origin/main --oneline)

if [[ "${reslog}" == "" ]];then
#remote changes exist
  sapphrc_restore
fi
  sapphrc_push
exit
